{
    "title": "Neovide configuration",
    "rules": [
        {
            "description": "Neovide: Cmd+Q -> Ctrl+Q (quit)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "q",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "q",
                            "modifiers": [
                                "left_control"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "file_paths": [
                                "^.*\/\\.cargo\/bin\/neovide$"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Neovide: Cmd+H -> Opt+H (move half page down)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "h",
                            "modifiers": [
                                "left_option"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "file_paths": [
                                "^.*\/\\.cargo\/bin\/neovide$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
